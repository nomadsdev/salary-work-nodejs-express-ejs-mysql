<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">   
    <style>
        *{
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body>
    <div class="flex justify-center">
        <div class="p-10">
            <h1 class="text-2xl text-blue-600">List of occupations and salaries</h1>
            <div class="bg-blue-600 w-5 h-1 rounded-full"></div>
        </div>
    </div>
    <div class="flex justify-center">
        <ul>
            <% jobs.forEach(job => { %>
                <div class="flex gap-2 my-5">
                    <p><%= job.name %> - <%= job.salary %></p>
                    <form action="/delete/<%= job.id %>" method="POST"><button class="bg-red-600 text-white px-5 py-1 rounded-full text-xs">Delete</button></form>
                </div>
            <% }) %>
        </ul>
    </div>
    <div class="flex justify-center">
        <div>
            <div class="flex justify-center">
                <div class="p-10">
                    <h2 class="text-2xl text-blue-600">Add a new career and salary</h2>
                    <div class="bg-blue-600 w-5 h-1 rounded-full"></div>
                </div>
            </div>
            <form action="/add" method="POST">
                <div class="flex justify-center gap-5">
                    <label for="name">Position :</label>
                    <input type="text" id="name" name="name" required class="border border-blue-600 text-blue-500 px-2 rounded-full">
                    <label for="salary">Salary:</label>
                    <input type="number" id="salary" name="salary" required class="border border-blue-600 text-blue-500 px-2 rounded-full">
                    <button type="submit" class="bg-yellow-500 text-white px-5 py-1 rounded-full">sava</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>